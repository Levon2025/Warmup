include <stdio.h>

int main(){
     int num = 0;
     float sum = 0;
     printf("Enter the size of array:");
     scanf("%d",&num);
     int a[num];
     printf("Enter the element %d\n",num);
     for(int i = 0; i < num; i++){
         printf("a[%d] = ",i);
         scanf("%d",&a[i]);
         sum += a[i];
     }
     float mij = sum / num;
     printf("Mijin %.2f\n",mij);
     return 0;
}
